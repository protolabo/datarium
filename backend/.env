# Clé Firebase (chemin vers ton fichier JSON de service account)
FIREBASE_KEY_PATH=./src/config/firebaseKey.json

# Optionnel : clé API pour accès sécurisé (peut rester vide si pas utilisé)
API_KEY_SNIFFER=123456

# Facteur d’énergie par octet transféré (en kWh)
KWH_FACTOR=0.000000055

# Émission de CO2 par kWh (en g)
CO2_FACTOR=400

# Unité utilisée pour le thermomètre (kwh ou co2)
THERMO_UNIT=kwh

# Seuils pour l’affichage graphique (à adapter à ton interface)
THRESHOLDS_KWH=0.05,0.1,0.2
THRESHOLDS_CO2=20,40,80
